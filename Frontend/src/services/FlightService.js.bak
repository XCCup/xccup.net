let axios = require("axios");

const url = "https://xccup.lurb.org/flights";

class FlightService {
  // Get Flights
  static getFlights() {
    return new Promise((resolve, reject) => {
      axios
        .get(url)
        .then((res) => {
          const data = res.data;
          resolve(
            data.map((flight) => ({
              ...flight,
              createdAt: new Date(flight.createdAt),
            }))
          );
        })
        .catch((err) => {
          reject(err);
        });
    });
  }
  // Get specific flight
  static getFlight(flightId) {
    return new Promise((resolve, reject) => {
      axios
        .get(`${url}/${flightId}`)
        .then((res) => {
          const data = res.data;
          resolve(data);
        })
        .catch((err) => {
          reject(err);
        });
    });
  }
}

export default FlightService;
