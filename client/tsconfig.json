{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "vue-global-props.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["cypress/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "src",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
